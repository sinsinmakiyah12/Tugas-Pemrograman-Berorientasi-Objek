<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F3E5F5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail &amp; Edit Jurnal âœ¨"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4A148C"
        android:gravity="center"
        android:layout_marginBottom="25dp" />

    <EditText
        android:id="@+id/detail_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Judul Catatan"
        android:textColor="#000000"
        android:textColorHint="#757575"
        android:padding="12dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/detail_skor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Skor Mood (1-10)"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#757575"
        android:padding="12dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/detail_isi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ceritakan harimu..."
        android:textColor="#000000"
        android:textColorHint="#757575"
        android:lines="4"
        android:gravity="top"
        android:padding="12dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/detail_saran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:text="Saran MindBuddy akan muncul di sini..."
        android:textColor="#D81B60"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="25dp" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:text="SIMPAN PERUBAHAN"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_hapus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FF5252"
        android:text="HAPUS CATATAN"
        android:textColor="#FFFFFF" />

</LinearLayout>